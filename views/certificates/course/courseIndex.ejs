<% include ../../partials/header.ejs %>

<div class="container-fluid" style="margin-top:75px;">

  <% if(user._id == "5b1a8cee8d7ed00020a30a4f" || user._id == "61bb44455668037d34d0f36b")
  { %>
    <a href="course/add" class="btn btn-success" style="margin-bottom:10px;">Add a New Certification</a>

  <% }
  else{%>


  <%    }%>
<table class="table table-inverse table-hover">
    <tr><th>Icon</th><th>Certification</th><th>Certification Type</th><th>Edit</th><th>Delete</th></tr>
 <!--  logic to populate the table   -->
    <% for (var i = 0; i < courses.length; i++) { %>
        <tr>
            <td> <img height="64px" width="64px" src="../../images/certificateIcons/<%= courses[i].iconurl %>" /> </td>
            <td><%= courses[i].coursename %></td>
            <td><%= courses[i].coursetype %></td>


            <% if(user._id == "5b1a8cee8d7ed00020a30a4f" || user._id == "61bb44455668037d34d0f36b")
            { %>
  <td><a href="course/<%= courses[i]._id %>" class="btn btn-info">Edit</a></td>            <% }
            else{%>
            <td><a href="#" class="btn btn-info" disabled>Edit</a></td>
            <%    }%>

               <% if(user._id == "5b1a8cee8d7ed00020a30a4f" || user._id == "61bb44455668037d34d0f36b")
               { %>
                 <td><a  href="course/delete/<%= courses[i]._id %>" class="btn btn-danger confirmation">Delete</a></td>
            <% }
            else{%>
            <td><a href="#" class="confirmation btn btn-danger" disabled>Delete</a></td>

            <%    }%>



        </tr>
    <% } %>

</table>
</div>
